                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.ColumnSpan="2"
                                Content="Liczba kobiet:"
                                FontSize="16"
                                Foreground="CadetBlue"/>

                            <Canvas
                                Grid.Row="1"
                                Name="faceMustacheCanvas1"
                                Width="40"
                                Height="40"
                                Margin="0,2"/>

                            <Canvas
