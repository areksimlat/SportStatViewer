                                Width="40"
                                Height="40"
                                Margin="0,2"/>

                            <Rectangle
                                Grid.Row="5"
                                Name="faceBkgRectColor5"
                                Width="40"
                                Height="40"
                                Margin="0,2"/>

                            <Label
                                Grid.Column="1"
                                Grid.Row="1"
                                Name="faceBkgLabelColor1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="15"/>

                            <Label
                                Grid.Column="1"
                                Grid.Row="2"
                                Name="faceBkgLabelColor2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="15"/>
                            
                            <Label
                                Grid.Column="1"
                                Grid.Row="3"
                                Name="faceBkgLabelColor3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="15"/>

                            <Label
                                Grid.Column="1"
                                Grid.Row="4"
                                Name="faceBkgLabelColor4"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
