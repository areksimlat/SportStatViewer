                                Grid.Row="5"
                                Name="faceBkgLabelColor5"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="15"/>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Oczy">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.ColumnSpan="2"
                                Content="Liczba juniorów:"
                                FontSize="16"
                                Foreground="CadetBlue"/>

                            <Canvas
                                Grid.Row="1"
                                Name="faceEyesCanvas1"
                                Width="40"
                                Height="40"
                                Margin="0,2"/>

                            <Canvas
                                Grid.Row="2"
                                Name="faceEyesCanvas2"
                                Width="40"
                                Height="40"
